{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.gem_pet.sit_controller": {
			"states": {
				"default": {
					"animations": ["idle"],
					"transitions": [
						{"active": "query.is_sitting"}
					]
				},
				"active": {
					"animations": ["sit"],
					"transitions": [
